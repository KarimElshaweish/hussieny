<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout android:layout_height="100dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context=".Activites.DetailsActivity"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <ScrollView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="center"
                            android:drawableLeft="@drawable/ic_building"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/nexa_normal"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Place Name "/>
                        <TextView
                            android:id="@+id/placeName"
                            android:fontFamily="@font/nexa"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="roshdy PH"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:drawableLeft="@drawable/ic_place"
                            android:gravity="center"
                            android:fontFamily="@font/nexa_normal"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location "/>
                        <TextView
                            android:id="@+id/location"
                            android:fontFamily="@font/nexa"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cairo"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_date"
                            android:fontFamily="@font/nexa_normal"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date "/>
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/date"
                            android:fontFamily="@font/nexa"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10/10/2019"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                        <TextView
                            android:drawableLeft="@drawable/ic_time"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:fontFamily="@font/nexa_normal"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time "/>
                        <TextView
                            android:id="@+id/time"
                            android:fontFamily="@font/nexa"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:15 AM"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                        <TextView
                            android:drawableLeft="@drawable/ic_place"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/nexa_normal"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Place Type "/>
                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/placeType"
                            android:fontFamily="@font/nexa"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pharmacy"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                        <TextView
                            android:drawableLeft="@drawable/ic_state"
                            android:fontFamily="@font/nexa_normal"
                            android:textColor="#000"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visite State "/>
                        <TextView
                            android:id="@+id/visitStata"
                            android:fontFamily="@font/nexa"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Follow Up"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Contact Person"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:textSize="20dp"
                        android:fontFamily="@font/nexa_normal"
                        android:textColor="#000"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                        <TextView
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:drawableLeft="@drawable/ic_name"
                            android:fontFamily="@font/nexa_normal"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name "/>
                        <TextView
                            android:id="@+id/conPerson"
                            android:fontFamily="@font/nexa"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ahmed"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                        <TextView
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_job"
                            android:gravity="center"
                            android:fontFamily="@font/nexa_normal"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="title "/>
                        <TextView
                            android:fontFamily="@font/nexa"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doctor"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                        <TextView
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_phone"
                            android:fontFamily="@font/nexa_normal"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Number "/>
                        <TextView
                            android:fontFamily="@font/nexa"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="010003222"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Key Person"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:textSize="20dp"
                        android:fontFamily="@font/nexa_normal"
                        android:textColor="#000"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                        <TextView
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_name"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:fontFamily="@font/nexa_normal"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name  "/>
                        <TextView
                            android:layout_gravity="center"
                            android:fontFamily="@font/nexa"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ahmed"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                        <TextView
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_job"
                            android:fontFamily="@font/nexa_normal"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="title "/>
                        <TextView
                            android:layout_gravity="center"
                            android:fontFamily="@font/nexa"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doctor"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                        <TextView
                            android:drawableLeft="@drawable/ic_phone"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/nexa_normal"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:drawablePadding="5dp"
                            android:layout_height="wrap_content"
                            android:text="Phone Number "/>
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/nexa"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="010003222"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                        <TextView
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_email"
                            android:gravity="center"
                            android:fontFamily="@font/nexa_normal"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email "/>
                        <TextView
                            android:fontFamily="@font/nexa"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ah@mm.com"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                        <TextView
                            android:drawableLeft="@drawable/ic_feedback"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/nexa_normal"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="comment "/>
                        <TextView
                            android:layout_gravity="center"
                            android:fontFamily="@font/nexa"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="good"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/ic_feedback"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/nexa_normal"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="feedBack "/>
                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:fontFamily="@font/nexa"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="good"/>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv"></androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:layout_below="@id/rv"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_sent"
            android:onClick="send"
            android:layout_margin="10dp"
            app:backgroundTint="@color/colorPrimary"/>
        <Button
            android:visibility="gone"
            android:fontFamily="@font/nexa_normal"
            android:onClick="send"
            android:text="Send"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_green"/>
        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:fontFamily="@font/nexa_normal"
                android:id="@+id/msgText"
                android:layout_width="match_parent"
                android:backgroundTint="#fff"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>

</ScrollView>
</LinearLayout>