<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/cv"
    >
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">
            <TextView
                android:drawableLeft="@drawable/ic_place"
                android:drawablePadding="5dp"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/offerType"
                android:text="Place Name "
                android:fontFamily="@font/nexa_normal"
                android:textColor="#000"
                android:layout_gravity="right"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/placeNameTxt"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="placeName"
                android:fontFamily="@font/nexa"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_name"
                android:gravity="center"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/offerplace"
                android:text="Date "
                android:fontFamily="@font/nexa_normal"
                android:textColor="#000"
                android:layout_gravity="right"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/10/2018"
                android:gravity="center"
                android:fontFamily="@font/nexa"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center"
                android:textSize="15dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:drawableLeft="@drawable/ic_name"
                android:gravity="center"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time "
                android:drawablePadding="5dp"
                android:fontFamily="@font/nexa_normal"
                android:textColor="#000"
                android:layout_gravity="right"
                android:textSize="15dp"
                />
            <TextView
                android:gravity="center"
                android:id="@+id/time"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:33"
                android:fontFamily="@font/nexa"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center"
                android:textSize="15dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="3dp">
            <TextView
                android:drawableLeft="@drawable/ic_place"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:drawablePadding="5dp"

                android:layout_height="wrap_content"
                android:text="Location "
                android:textSize="15dp"
                android:textColor="#000"
                android:fontFamily="@font/nexa_normal"
                />
            <TextView
                android:id="@+id/placeName"
                android:textSize="15dp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6th October"
                android:layout_gravity="center"
                android:fontFamily="@font/nexa"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="3dp">
            <TextView
                android:drawableLeft="@drawable/ic_state"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order "
                android:textSize="15dp"
                android:drawablePadding="5dp"
                android:textColor="#000"
                android:fontFamily="@font/nexa_normal"
                />
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/order"
                android:textSize="15dp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 termo"
                android:fontFamily="@font/nexa"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="3dp">
            <TextView

                android:drawableLeft="@drawable/ic_feedback"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:drawablePadding="5dp"
                android:layout_height="wrap_content"
                android:text="FeedBack "
                android:textSize="15dp"
                android:textColor="#000"
                android:fontFamily="@font/nexa_normal"
                />
            <TextView
                android:id="@+id/feedback"
                android:textSize="15dp"
                android:textColor="@color/colorAccent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Good"
                android:layout_gravity="center"
                android:fontFamily="@font/nexa"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>